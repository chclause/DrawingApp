<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#444444"
    tools:context="com.example.charlie.assignment02.BrushSettingsActivity">

    <com.example.charlie.assignment02.BrushSettings
        android:id="@+id/LineDemo"
        android:layout_height="157dp"
        android:layout_width="404dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/RGB"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/RGB"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LineDemo"
        app:layout_constraintBottom_toTopOf="@+id/JoinButtons">

        <Button
            android:id="@+id/Red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Red #"
            />
        <EditText
            android:id="@+id/RedValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="cc"
            />
        <Button
            android:id="@+id/Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:text="Green #"
            />
        <EditText
            android:id="@+id/GreenValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_weight="1"
            android:text="cc"
            />
        <Button
            android:id="@+id/Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="5"
            android:text="Blue #"
            />
        <EditText
            android:id="@+id/BlueValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="6"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="cc"
            />
    </GridLayout>

    <GridLayout
        android:id="@+id/JoinButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:layout_gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RGB"
        app:layout_constraintBottom_toTopOf="@+id/CapButtons">


        <Button
            android:id="@+id/BevelButton"
            android:text="Bevel"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="left"
            />
        <Button
            android:id="@+id/MiterButton"
            android:text="Miter"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            />
        <Button
            android:id="@+id/RoundJoinButton"
            android:text="Round Join"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="right"
            />
    </GridLayout>

    <GridLayout
        android:id="@+id/CapButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:layout_gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/JoinButtons"
        app:layout_constraintBottom_toBottomOf="parent">


        <Button
            android:id="@+id/ButtButton"
            android:text="Butt"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="left"
            />
        <Button
            android:id="@+id/RoundCapButton"
            android:text="Round Cap"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            />
        <Button
            android:id="@+id/SquareButton"
            android:text="Square"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="right"
            />
    </GridLayout>

    <SeekBar
        android:id="@+id/lineSizeBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:min="1"
        android:progress="50"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CapButtons"
        app:layout_constraintBottom_toBottomOf="parent"
        />





</android.support.constraint.ConstraintLayout>
